{
  "name": "@ai-orchestrator/gateway",
  "version": "1.0.0",
  "description": "Production-grade LLM Gateway with semantic caching, intelligent routing, and observability",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bunx tsc --noEmit",
    "build": "bun build src/index.ts --outdir dist --target node",
    "playground": "bun run src/playground/server.ts",
    "dashboard": "bun run src/index.ts dashboard",
    "health": "bun run src/index.ts health",
    "stats": "bun run src/index.ts stats"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "ioredis": "^5.4.2",
    "openai": "^4.77.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.21.0",
    "zod": "^3.24.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.2"
  }
}
